{
  "name": "vue-chrome-extensions",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "watch": "run-p watch:*",
    "watch:content": "vite build --watch --config vite.content.config.js --mode development",
    "watch:background": "vite build --watch --config vite.background.config.js --mode development",
    "watch:sidePanel": "vite build --watch --config vite.config.js --mode development  ",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "element-plus": "^2.5.5",
    "npm-run-all": "^4.1.5",
    "pinia": "^2.1.7",
    "unplugin-auto-import": "^0.17.5",
    "vite-plugin-babel": "^1.2.0",
    "vue": "^3.4.15",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.3",
    "@vitejs/plugin-legacy": "^5.3.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "less": "^4.2.0",
    "prettier": "^3.0.3",
    "rollup-plugin-copy": "^3.5.0",
    "terser": "^5.27.0",
    "unplugin-vue-components": "^0.26.0",
    "vite": "^5.0.11"
  }
}
